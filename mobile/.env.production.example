# FitCoach Mobile - Production Environment Configuration
# Copy this file to .env.production for production builds

# =============================================================================
# API Configuration (PRODUCTION)
# =============================================================================

# Backend API base URL - CHANGE THIS TO YOUR PRODUCTION URL
EXPO_PUBLIC_API_BASE_URL=https://api.fitcoach.com/api/v1

# =============================================================================
# Application Configuration
# =============================================================================

EXPO_PUBLIC_APP_NAME=FitCoach
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_ENV=production

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# Add your production analytics ID
EXPO_PUBLIC_ANALYTICS_ID=

# Add your production Sentry DSN
EXPO_PUBLIC_SENTRY_DSN=

# =============================================================================
# Feature Flags
# =============================================================================

EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_ENABLE_ANALYTICS=true
