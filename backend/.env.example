# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=FitCoach
VERSION=0.1.0

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=fitcoach
POSTGRES_PASSWORD=fitcoach_password
POSTGRES_DB=fitcoach
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, gemini
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
LLM_MODEL_NAME=gpt-3.5-turbo  # OpenAI: gpt-3.5-turbo, gpt-4-turbo | Gemini: gemini-pro, gemini-1.5-flash
LLM_TEMPERATURE=0.7  # Range: 0.0-1.0 (lower = more deterministic, higher = more creative)
LLM_MAX_TOKENS=500  # Maximum tokens in response

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
