# FitCoach Desktop - Production Environment Configuration
# Copy this file to .env.production for production builds

# =============================================================================
# API Configuration (PRODUCTION)
# =============================================================================

# Backend API base URL - CHANGE THIS TO YOUR PRODUCTION URL
VITE_API_BASE_URL=https://api.fitcoach.com/api/v1

# =============================================================================
# Application Configuration
# =============================================================================

VITE_APP_NAME=FitCoach
VITE_APP_VERSION=0.1.0
VITE_APP_ENV=production

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# Add your production analytics ID
VITE_ANALYTICS_ID=

# Add your production Sentry DSN
VITE_SENTRY_DSN=

# =============================================================================
# Feature Flags
# =============================================================================

VITE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=true
